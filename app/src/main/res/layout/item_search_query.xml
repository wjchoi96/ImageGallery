<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="holder"
            type="com.gallery.kakaogallery.presentation.ui.searchimage.SearchQueryViewHolder"
            />
        <variable
            name="lastQuery"
            type="String"
            />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="10dp"
        android:paddingVertical="5dp"
        >
        <EditText
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:textSize="16sp"
            android:textColor="#101010"
            android:gravity="center_vertical"
            android:imeOptions="actionSearch"
            android:inputType="text"
            android:maxLines="1"
            android:layout_centerVertical="true"
            android:paddingVertical="10dp"
            android:background="@drawable/bg_search_query"
            android:id="@+id/et_query"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:paddingEnd="45dp"
            android:paddingStart="5dp"
            android:text="@{lastQuery}"
            android:onTextChanged="@{(charSqence, start, before, count) -> holder.queryChangedListener.invoke(charSqence.toString())}"
            app:onEditorActionListener="@{holder.queryEditorActionListener}"
            />

        <ImageView
            app:layout_constraintTop_toTopOf="@id/et_query"
            app:layout_constraintEnd_toEndOf="@id/et_query"
            app:layout_constraintBottom_toBottomOf="@id/et_query"
            android:padding="5dp"
            android:id="@+id/iv_btn_search"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/bg_btn_search"
            android:onClick="@{()->holder.searchQueryListener.invoke(holder.recentQuery)}"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
