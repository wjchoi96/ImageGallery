<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="viewModel"
            type="com.gallery.kakaogallery.presentation.viewmodel.SearchImageViewModel" />
        <variable
            name="holder"
            type="com.gallery.kakaogallery.presentation.ui.searchimage.SearchImagesAdapter.SearchQueryViewHolder"
            />
    </data>
    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="10dp"
        android:paddingVertical="5dp"
        >
        <EditText
            android:textSize="16sp"
            android:textColor="#101010"
            android:gravity="center_vertical"
            android:imeOptions="actionSearch"
            android:inputType="text"
            android:maxLines="1"
            android:layout_centerVertical="true"
            android:paddingVertical="10dp"
            android:background="@drawable/bg_search_query"
            android:id="@+id/et_query"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingEnd="45dp"
            android:paddingStart="5dp"
            app:onEditorActionListener="@{viewModel}"
            />

        <ImageView
            android:padding="5dp"
            android:id="@+id/iv_btn_search"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:src="@drawable/bg_btn_search"
            android:onClick="@{()->viewModel.searchQuery(holder.query)}"
            />
    </RelativeLayout>
</layout>
