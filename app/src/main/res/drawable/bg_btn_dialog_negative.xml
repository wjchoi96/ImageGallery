<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <solid android:color="#AAA8A8" />
            <stroke android:width="2dp"
                android:color="@color/mainClickColor"
                />
            <padding android:bottom="10dp"
                android:left="14dp"
                android:right="14dp"
                android:top="10dp" />
            <corners
                android:radius="30dp" />
        </shape>
    </item>

    <item android:state_pressed="false">
        <shape>
            <solid android:color="#FFFFFF" />
            <stroke android:width="2dp"
                android:color="@color/mainColor"
                />
            <padding android:bottom="10dp"
                android:left="14dp"
                android:right="14dp"
                android:top="10dp" />
            <corners
                android:radius="30dp" />
        </shape>
    </item>
</selector>